
<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
 
@model List<TurneroPracticaCurso.BLL.Dto.PersonaDto>
@section Estilos{
    <link rel="stylesheet" href="~/vendor/datatables/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/responsive.dataTables.min.css">
    <link rel="stylesheet" href="~/vendor/datatables/extensiones/css/buttons.dataTables.min.css">
}
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Usuarios</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <button class="btn btn-success" data-toggle="modal" data-target="#modalData"><i class="fas fa-user-plus"></i> Nuevo Usuario</button>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>Nro Identificación</th>
                            <th>Nombre</th>
                            <th>Apellido</th>
                            <th>Correo</th>
                            <th>Telefono</th>
                            <th>Rol</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var PersonaDto in Model)
                        {
                            <tr>
                                <td>@PersonaDto.NroDocumentos</td>
                                <td>@PersonaDto.Nombres</td>
                                <td>@PersonaDto.Apellidos</td>
                                <td>@PersonaDto.UsuarioEmail</td>
                                <td>@PersonaDto.NroCelular</td>
                                
                                <td>@PersonaDto.RolDescripcion</td>
                                <td>@PersonaDto.Activo</td>
                               
                                <td>
                                    <button asp-route-id="@PersonaDto.IdPersona" class="btn btn-primary btn-sm">
                                        <i class="fas fa-pencil-alt"></i>
                                    </button>
                                    <button asp-route-id="@PersonaDto.IdPersona" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash-alt"></i>
                                    </button>
                                </td>
 
                            </tr>
                        }

                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>





<!--Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Detalle Usuario</h6>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-8" style="margin:auto">
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtNombre">Nombres</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtNombre" name="Nombre">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtCorreo">Apellidos</label>
                                    <input type="email" class="form-control form-control-sm input-validar" id="txtApellido" name="apellido">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtCedula">Nro de documento</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtCedula" name="cedula">
                                </div>
                                
                                    <div class="form-group col-sm-6">
                                        <label for="txtCelular">Celular</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtCelular" name="celular">
                                    </div>
                                
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="cboDepartamento">Departamento</label>
                                    <select class="form-control form-control-sm" id="cboDepartamento">
                                        <option value="1">Cali</option>
                                    </select>
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="cboMuncipio">Municipio</label>
                                    <select class="form-control form-control-sm" id="cboMuncipio">
                                        <option value="1">Cali</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-sm-6">
                                    <label for="txtCorreo">Correo</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtTelefono" name="Correo">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="rolSelect">Rol</label>
                                    <select class="form-control form-control-sm" id="rolSelect">
                                        <option selected>Seleccione un rol</option>
                                    </select>
                                </div>
                            </div>
                            
                        </div>
                   

                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnGuardar">Guardar</button>
                <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

